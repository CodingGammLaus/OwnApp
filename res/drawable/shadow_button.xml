<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:left="0dp" android:top="0dp">
        <shape>
            <solid android:color="@color/shadow" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:bottom="5dp" android:right="0dp">
        <shape>
            <gradient android:startColor="@color/orange" android:endColor="@color/prim"/>
            <corners android:radius="15dp" />
            <stroke android:color="@color/white" android:width="1dp"/>
        </shape>
    </item>
</layer-list>